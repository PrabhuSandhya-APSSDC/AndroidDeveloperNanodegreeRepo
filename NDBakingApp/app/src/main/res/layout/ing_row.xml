<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ing_row_width"
    android:layout_height="@dimen/ing_row_height"
    android:layout_margin="@dimen/layout_margin2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/layout_margin"
    app:cardBackgroundColor="@color/green"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/layout_margin2"
        >

        <TextView
            android:id="@+id/ing_name"
            style="@style/ing_text_style"
            android:layout_weight="0.3"
            />

        <TextView
            android:id="@+id/ing_quantity"
            style="@style/ing_text_style"
            android:layout_weight="0.2"
            />

        <TextView
            android:id="@+id/ing_measure"
            style="@style/ing_text_style"
            android:layout_weight="0.2"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>